<p id="notice"><%= notice %></p>

<h1>People</h1>

<ta-belle id="tabelle" search-src="/" sort="<%= @sort %>" change-uri>
  <table>
    <thead>
      <tr>
        <th name="name" value="<%= @filter[:name] %>">Name</th>
        <th name="phone" value="<%= @filter[:phone] %>">Phone</th>
        <th name="email" value="<%= @filter[:email] %>">Email</th>
        <th name="address" value="<%= @filter[:address] %>">Address</th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.phone %></td>
          <td><%= person.email %></td>
          <td>
            <div><%= person.street %></div>
            <div><%= person.city %>, <%= person.zip %></div>
            <div><%= person.country %></div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ta-belle>

